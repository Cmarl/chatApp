h3.text-center {{name | uppercase}}
.container
  .row
    .col-xs-4.col-xs-offset-4#profile 
    form(name='userForm', novalidate)
      .form-group
        h1
      .form-group.text-center
        button#socialLogin.btn.btn-lg.btn-info(ng-click='oauth("twitter")'): i.fa.fa-twitter
        button#socialLogin.btn.btn-lg.btn-default(ng-click='oauth("github")'): i.fa.fa-github
        button#socialLogin.btn.btn-lg.btn-danger(ng-click='oauth("google")'): i.fa.fa-google
        button#socialLogin.btn.btn-lg.btn-info(ng-click='oauth("facebook")'): i.fa.fa-facebook
      h3.text-center - Or -
      h4.text-center sign in with Email
      .form-group
        label(for='email') Email
        input.form-control#email(type='email', name='email', ng-model='user.email')
      .form-group
        label(for='password') Password
        input.form-control#password(type='password', name='password', ng-model='user.password')
      .form-group.text-center
        button.btn.btn-info.btn-xs.form-control(type='submit', ng-click='submit(user)') Submit
